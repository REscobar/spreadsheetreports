<UserControl x:Class="SpreadSheetsReports.WpfUi.Cells.Rotation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi.Cells"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="140">
    <Grid>
        <ContentControl Margin="10,10,0,47" RenderTransformOrigin="0,0.5" BorderThickness="70,40,38,39" BorderBrush="Black">
            <Label x:Name="label" Content="Label" Margin="20,0,30,87" VerticalAlignment="Bottom" RenderTransformOrigin="0,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform x:Name="Rot" Angle="1"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
        </ContentControl>
        <TextBox Margin="10,0,10,10" Text="{Binding Angle, ElementName=Rot, Mode=TwoWay}" Height="27" VerticalAlignment="Bottom"></TextBox>

    </Grid>
</UserControl>
