<UserControl x:Class="SpreadSheetsReports.WpfUi.Cells.CellStyleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi.Cells"
            xmlns:p="clr-namespace:SpreadSheetsReports.WpfUi.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <TabControl x:Name="tabControl"  Margin="10,10,10,35" >
            <TabItem Header="{x:Static p:Resources.CellStyleEditor_Aligment}">
                <Grid>
                    <local:Aligment />
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static p:Resources.CellStyleEditor_Font}">
                <Grid>
                    <local:Font />
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static p:Resources.CellStyleEditor_Border}">
                <Grid>
                    <local:Border />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
