<UserControl x:Class="SpreadSheetsReports.WpfUi.Rows.RowCollectionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi.Rows"
             xmlns:cells="clr-namespace:SpreadSheetsReports.WpfUi.Cells"
             xmlns:e="clr-namespace:SpreadSheetsReports.WpfUi"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <e:DebuggerConverter x:Key="Debugger"/>
    </UserControl.Resources>
    <ListView DataContext="{Binding Rows}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <Label>Row</Label>
                <local:RowEditor DataContext="{Binding Rows, Converter={StaticResource Debugger}}" />
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</UserControl>
