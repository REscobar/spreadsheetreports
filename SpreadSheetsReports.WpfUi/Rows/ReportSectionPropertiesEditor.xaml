<UserControl x:Class="SpreadSheetsReports.WpfUi.Rows.ReportSectionPropertiesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi.Rows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:ReportSectionBinder, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="DataMember" Height="26" Margin="5" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Height="26" Margin="5" Text="{Binding Path=DataMember}" />
        </StackPanel>
    </Grid>
</UserControl>
