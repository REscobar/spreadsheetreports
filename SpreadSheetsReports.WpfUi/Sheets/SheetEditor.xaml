<UserControl x:Class="SpreadSheetsReports.WpfUi.Sheets.SheetEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi"
             xmlns:rows="clr-namespace:SpreadSheetsReports.WpfUi.Rows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ItemsControl Grid.Row="0">
        </ItemsControl>
    <ScrollViewer Grid.Row="1">
        <rows:ReportSectionEditor DataContext="{Binding Content}"></rows:ReportSectionEditor>
    </ScrollViewer>
    </Grid>
</UserControl>
