<UserControl xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="SpreadSheetsReports.WpfUi.Sheets.ColumnResizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpreadSheetsReports.WpfUi.Sheets"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:Column, IsDesignTimeCreatable=True}">
    <Grid>
        <Label HorizontalAlignment="Center" Margin="10,10,222,10" Width="68">
            Size
        </Label>
        <xctk:IntegerUpDown Margin="83,10,10,10" Value="{Binding Size}" Minimum="1"  >
        </xctk:IntegerUpDown>
    </Grid>
</UserControl>
